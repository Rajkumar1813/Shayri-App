<%- include('./partials/header', { user: user }) %>
<%- include('./partials/notifications', { success: success, error: error }) %>
<marquee class="mt-2 mb-4 text-danger text-bold" direction="right" scrollamount="12">You Can Post Your Thoughts <i class="bi bi-envelope-open-heart"></i> Here..!</marquee>
<h1 class="mb-4"><i class="bi bi-pen"></i> Latest Shayaris</h1>
<div class="row">
  <% shayaris.forEach(shayari => { %>
    <div class="col-md-6 col-lg-4 mb-4">
      <div class="card h-100">
        <div class="card-body">
          <p class="card-text" id="shayari-text-<%= shayari._id %>"><%= shayari.content %></p>
        </div>
        <div class="card-footer d-flex align-items-center justify-content-between">
          <span class="text-muted small">
            <i class="bi bi-person-circle"></i>
            <%= shayari.author ? shayari.author.username : 'Anonymous' %>
            <span class="ms-1"><i class="bi bi-clock"></i> <%= shayari.createdAt.toLocaleString() %></span>
          </span>
          <button class="btn btn-outline-secondary btn-sm copy-btn"
            data-id="<%= shayari._id %>" title="Copy Shayari"
          >
            <i class="bi bi-clipboard"></i>
          </button>
        </div>
      </div>
    </div>
  <% }) %>
</div>
<%- include('./partials/footer') %>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="/js/main.js"></script>
</body></html>
