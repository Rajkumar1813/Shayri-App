<%- include('./partials/header', { user: user }) %>
<%- include('./partials/notifications', { success: success, error: error }) %>
<h2><i class="bi bi-pencil-square"></i> Edit Shayari</h2>
<form method="POST" action="/edit/<%= shayari._id %>">
  <div class="mb-3">
    <textarea name="content" rows="5" class="form-control" required><%= shayari.content %></textarea>
  </div>
  <button type="submit" class="btn btn-success"><i class="bi bi-save"></i> Save Changes</button>
  <a href="/dashboard" class="btn btn-secondary ms-2"><i class="bi bi-arrow-left"></i> Cancel</a>
</form>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body></html>
